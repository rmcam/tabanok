{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "transform": {
        "^.+\\.(t|j)s$": [
            "ts-jest",
            {
                "tsconfig": {
                    "allowJs": true,
                    "target": "es2017",
                    "module": "commonjs",
                    "strict": false
                }
            }
        ]
    },
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/../src/$1"
    },
    "testTimeout": 30000,
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true,
    "roots": [
        "<rootDir>"
    ],
    "testMatch": [
      "<rootDir>/**/*.e2e-spec.ts"
    ]
}
