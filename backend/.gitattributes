# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf

# JSON files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Config files
*.env text eol=lf
.env.* text eol=lf
.gitignore text eol=lf
.prettierrc text eol=lf
.eslintrc text eol=lf

# Documentation
*.md text eol=lf 