                        "primera": "chanjá (iré/haré)",
                        "segunda": "cochjá (irás/harás)",
                        "tercera": "echanjá (irá/hará)"
                    },
                    "dual": {
                        "primera": "bochanjá",
                        "segunda": "sochanjá",
                        "tercera": "bochanjá"
                    },
                    "plural": {
                        "primera": "fchanjá",
                        "segunda": "sm̈ochanjá",
                        "tercera": "mochanjá"
                    }
                }
            },
            "patrones_uso": {
                "tipo": "Prefijos temporales",
                "descripcion": "Los verbos en kamëntsá utilizan prefijos para indicar tiempo",
                "ejemplos": [
                    {
                        "prefijo": "së-/s-",
                        "uso": "Primera persona singular",
                        "ejemplo": "sëndësá (yo como)"
                    },
                    {
                        "prefijo": "co-/c-",
                        "uso": "Segunda persona singular",
                        "ejemplo": "condesa (tú comes)"
                    },
                    {
                        "prefijo": "en-/e-",
                        "uso": "Tercera persona singular",
                        "ejemplo": "endësá (él/ella come)"
                    }
                ]
            },
            "vocales_funcionales": [
                {
                    "vocal": "e",
                    "ejemplo": "jefsä yán (afilar)",
                    "descripcion": "La vocal funcional une los otros prefijos a la raíz"
                },
                {
                    "vocal": "i",
                    "ejemplo": "jiyëban (traer)",
                    "descripcion": "Otra vocal funcional que está funcionando en la construcción"
                }
            ],
            "patrones_verbales": {
                "verbo_base": "juabn (pensar)",
                "conjugaciones": [
                    {
                        "forma": "sënjuabna",
                        "uso": "Primera persona singular",
                        "ejemplo": "yo pienso"
                    },
                    {
                        "forma": "conjuabna",
                        "uso": "Segunda persona singular",
                        "ejemplo": "tú piensas"
                    },
                    {
                        "forma": "enjuabna",
                        "uso": "Tercera persona singular",
                        "ejemplo": "él/ella piensa"
                    }
                ]
            },
            "casos_especiales": [
                {
                    "tipo": "Verbos con vocal inicial",
                    "descripcion": "Verbos que comienzan con vocal tienen patrones especiales de conjugación",
                    "ejemplos": [
                        {
                            "verbo": "obëjna (tejer)",
                            "conjugaciones": [
                                {
                                    "forma": "sëntsobëjna",
                                    "explicacion": "Se añade 'ts' entre el prefijo personal y la raíz"
                                },
                                {
                                    "forma": "contsobëjna",
                                    "explicacion": "Mantiene el patrón de 'ts' con el prefijo de segunda persona"
                                }
                            ]
                        }
                    ]
                },
                {
                    "tipo": "Verbos con cambio de raíz",
                    "descripcion": "Algunos verbos modifican su raíz en ciertas conjugaciones",
                    "ejemplos": [
                        {
                            "verbo": "jiyëban (traer)",
                            "conjugaciones": [
                                {
                                    "forma_base": "jiyëban",
                                    "forma_conjugada": "sënjiyë",
                                    "explicacion": "Pierde la sílaba 'ban' en primera persona"
                                }
                            ]
                        }
                    ]
                },
                {
                    "tipo": "Verbos con doble vocal funcional",
                    "descripcion": "Verbos que requieren dos vocales funcionales para su conjugación",
                    "ejemplos": [
                        {
                            "verbo": "jefsä yán (afilar)",
                            "conjugaciones": [
                                {
                                    "forma": "sënjefsä yá",
                                    "explicacion": "Usa 'e' para unir el prefijo y 'ä' como segunda vocal funcional"
                                }
                            ]
                        }
                    ]
                },
                {
                    "tipo": "Excepciones en sufijos de número",
                    "descripcion": "Algunos verbos tienen formas irregulares al añadir sufijos de número",
                    "ejemplos": [
                        {
                            "verbo": "jtsebos (querer/desear)",
                            "conjugaciones": [
                                {
                                    "forma_singular": "sëntsebos",
                                    "forma_dual": "fsëntsebosat",
                                    "forma_plural": "fsëntsebosang",
                                    "explicacion": "Mantiene la 's' final en todas las formas"
                                }
                            ]
                        }
                    ]
                }
            ],
            "notas_adicionales": {
                "tema": "Uso del prefijo 'ts'",
                "descripcion": "El prefijo 'ts' aparece en verbos que indican estados o acciones continuas",
                "ejemplos": [
                    {
                        "verbo": "jtsebos",
