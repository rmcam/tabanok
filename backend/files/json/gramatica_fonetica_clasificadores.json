{
    "gramatica": {
        "sustantivos": {
            "descripcion": "El sustantivo en kamëntsá indica el nombre de un elemento animado o inanimado, el cual consta, básicamente, de un radical y un clasificador",
            "clasificadores": [
                {
                    "sufijo": "-be",
                    "significado": "redonda y compacta",
                    "ejemplos": [
                        "ndetsb̈é (piedra)",
                        "fsn̈ëbé (ojo)"
                    ]
                },
                {
                    "sufijo": "-ts̈",
                    "significado": "forma oval, compacta",
                    "ejemplos": [
                        "shecuats̈ (pie)",
                        "cucuats̈ (mano)"
                    ]
                },
                {
                    "sufijo": "-tsá̈",
                    "significado": "oval, alargada, compacta",
                    "ejemplos": [
                        "blandëtsá̈ (plátano)"
                    ]
                }
            ]
        },
        "numero": {
            "singular": {
                "sufijo": "-á",
                "ejemplos": [
                    "uacná (vaca)"
                ]
            },
            "dual": {
                "sufijo": "-at",
                "ejemplos": [
                    "uacnat (dos vacas)"
                ]
            },
            "plural": {
                "sufijo": "-ng",
                "ejemplos": [
                    "uacnëng (varias vacas)"
                ]
            }
        },
        "verbos": {
            "tipos": [
                "transitivos",
                "intransitivos"
            ],
            "conjugaciones": {
                "presente": {
                    "singular": {
                        "primera": "sëndësá (como)",
                        "segunda": "condesa (comes)",
                        "tercera": "endësá (come)"
                    },
                    "dual": {
                        "primera": "fsëndësat",
                        "segunda": "sö ndësat",
                        "tercera": "bondësat"
                    },
                    "plural": {
                        "primera": "fsëndësang",
                        "segunda": "sm̈ondësang",
                        "tercera": "mondësang"
                    }
                },
                "pasado": {
                    "singular": {
                        "primera": "sënjá (fui/hice)",
                        "segunda": "conjá (fuiste/hiciste)",
                        "tercera": "tonjá (fue/hizo)"
                    },
                    "dual": {
                        "primera": "bonjá",
                        "segunda": "sonjá",
                        "tercera": "tbonjá"
                    },
                    "plural": {
                        "primera": "fsënjá",
                        "segunda": "sm̈onjá",
                        "tercera": "tmonjá"
                    }
                },
